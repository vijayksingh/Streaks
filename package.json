{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "streaks",
  "title": "Streaks",
  "description": "Manage your healthy habits and streaks",
  "icon": "command-icon.png",
  "author": "dprophecyguy",
  "categories": [
    "Applications",
    "Fun",
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "show-habits",
      "title": "Show Habits",
      "description": "Display a list of your habits",
      "mode": "view"
    },
    {
      "name": "create-habit",
      "title": "Create Habit",
      "description": "Create a new habit",
      "mode": "view"
    },
    {
      "name": "delete-habit",
      "title": "Delete Habit",
      "description": "Delete a habit",
      "mode": "view"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.70.2",
    "date-fns": "^3.6.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
